{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
